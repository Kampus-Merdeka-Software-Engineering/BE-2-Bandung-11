// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// buat dokumen model
model sign{
  id Int @id @default(autoincrement())
  nama_lengkap String
  email String
  password String
  user user []
}

model user{
  id Int @id @default(autoincrement())
  nama_lengkap String
  jenis_kelamin String
  tgl_lahir String
  pekerjaan String
  no_telp String
  email String
  password String
  booking booking []
  id_sign Int?
  user sign? @relation(fields: [id_sign], references: [id])
}

model booking{
  id Int @id @default(autoincrement())
  id_user Int?
  user user? @relation(fields: [id_user], references: [id])
  id_kamar Int?
  kamar kamar? @relation(fields: [id_kamar], references: [id])
  status String
}

model kamar{
  id Int @id @default(autoincrement())
  nama_kamar String
  harga_kamar String
  id_kos Int?
  kost kost? @relation(fields: [id_kos], references: [id])
  booking booking []
 
}

model kost{
  id Int @id @default(autoincrement())
  nama_kos String
  harga_range String
  alamat_kos String
  kamar kamar []
}

model kategori{
  id Int @id @default(autoincrement())
  kategori_kos String
}

