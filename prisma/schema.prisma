generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sign {
  id           Int    @id @default(autoincrement())
  nama_lengkap String
  email        String
  password     String
  user         user?
}

model user {
  id            Int       @id @default(autoincrement())
  nama_lengkap  String
  jenis_kelamin String
  tgl_lahir     String
  pekerjaan     String
  no_telp       String
  email         String
  password      String
  id_sign       Int? @unique
  booking       booking[]
  sign          sign?     @relation(fields: [id_sign], references: [id])
  

  @@index([id_sign], map: "user_id_sign_fkey")
}

model booking {
  id       Int    @id @default(autoincrement())
  id_user  Int?
  id_kamar Int?
  status   String
  kamar    kamar? @relation(fields: [id_kamar], references: [id])
  user     user?  @relation(fields: [id_user], references: [id])

  @@index([id_kamar], map: "booking_id_kamar_fkey")
  @@index([id_user], map: "booking_id_user_fkey")
}

model kamar {
  id          Int       @id @default(autoincrement())
  imgUrl      String
  nama_kamar  String
  harga_kamar String
  id_kos      Int?
  booking     booking[]
  kost        kost?     @relation(fields: [id_kos], references: [id])

  @@index([id_kos], map: "kamar_id_kos_fkey")
}

model kost {
  id          Int     @id @default(autoincrement())
  imgUrl      String
  nama_kos    String
  harga_range String
  alamat_kos  String
  kamar       kamar[]
